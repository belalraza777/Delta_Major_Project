<% layout('layout/boilerplate') -%>
    <style>
        .filters {
            display: flex;
            /* align-items: center; */
            justify-content: center;
            text-align: center;
            margin: 15px;
        }

        .filter {
            margin: 7px 16px;
            margin-top: 8px;
            opacity: 0.7;
            cursor: pointer;
        }

        .filter:hover {
            opacity: 100;
        }

        .tax-switch {
            border: 1px solid black;
            border-radius: 0.6rem;
            height: 3.2rem;
            padding: 0.8rem;
            margin-left: 5rem;
            margin-top: 5px;
            display: flex;
            align-items: center;

        }

        .tax-price {
            color: rgb(190, 7, 7);
            display: none;
        }
    </style>

    <body>
        <!-- filters -->
        <div class="filters">
            <div class="filter">
                <div><i class="fa-solid fa-fire"></i></div>
                <p>Treading</p>
            </div>
            <div class="filter">
                <div><i class="fa-solid fa-mountain"></i></div>
                <p>Mountain</p>
            </div>
            <div class="filter">
                <div><i class="fa-solid fa-mountain-city"></i></div>
                <p>Iconic City</p>
            </div>
            <div class="filter">
                <div><i class="fa-solid fa-person-swimming"></i></div>
                <p>Amazing Pools</p>
            </div>
            <div class="filter">
                <div><i class="fa-solid fa-snowflake"></i></div>
                <p>Arctic</p>
            </div>
            <div class="filter">
                <div><i class="fa-solid fa-campground"></i></div>
                <p>Camping</p>
            </div>
            <div class="filter">
                <div><i class="fa-solid fa-cow"></i></div>
                <p>Farms</p>
            </div>
            <div class="filter">
                <div><i class="fa-solid fa-ship"></i></div>
                <p>Boats</p>
            </div>
            <div class="filter">
                <div><i class="fa-solid fa-bed"></i></div>
                <p>Rooms</p>
            </div>

            <div class="tax-switch">
                <div class="form-check-reverse form-switch">
                    <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
                    <label class="form-check-label" for="flexSwitchCheckDefault">Display after total taxes</label>
                </div>
            </div>

        </div>

        <!-- All Listings -->
        <div class="row" style="width: 100%; display: flex; justify-content: space-around; margin-top: 18px;">
            <% allListing.forEach((el)=> { %>
                <div class="card" style="width: 20rem; margin: 5px 0;">
                    <a href="/listings/<%= el._id %>">
                        <img src="<%= el.image.url %>" class="card-img-top" style="width: 100%; height: 20rem;"
                            alt="...">
                        <div class="card-body">
                            <p class="card-text">
                                <b>
                                    <%= el.title %>
                                </b>
                                <br>
                                &#x20B9;<%= (el.price).toLocaleString("en-IN") %>/night
                                    <span class="tax-price"><i>+18% GST</i></span>
                            </p>

                        </div>
                    </a>
                </div>
                <% }); %>
        </div>

        <script>
            const taxSwitch = document.querySelector("#flexSwitchCheckDefault");

            taxSwitch.addEventListener("change", function () {
                const taxPrice = document.getElementsByClassName("tax-price");
                for (let element of taxPrice) {
                    if (element.style.display != "inline") {
                        element.style.display = "inline";
                    } else {
                        element.style.display = "none";
                    }
                }
            });
        </script>
    </body>