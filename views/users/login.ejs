<% layout('layout/boilerplate') -%>

<body class="bg-light">
    <div class="container mt-5">
        <div class="mx-auto bg-white shadow rounded p-4" style="max-width: 480px;">
            <h2 class="mb-4 text-center text-md-start">Login</h2>

            <form action="/login" method="post" class="needs-validation" novalidate>
                <div class="mb-3">
                    <label for="username" class="form-label">Username</label>
                    <input type="text" id="username" name="username" class="form-control" placeholder="Enter username" required>
                </div>

                <div class="mb-3">
                    <label for="password" class="form-label">Password</label>
                    <input type="password" id="password" name="password" class="form-control" placeholder="Enter password" required>
                </div>

                <button type="submit" class="btn btn-outline-danger w-100">Login</button>
            </form>
             <a href="/user/signup" class="btn btn-outline-primary w-50 ">Create new Account</a>
        </div>
    </div>
</body>
