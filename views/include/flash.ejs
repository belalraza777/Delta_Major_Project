<% if (success && success.length) { %>
    <div class="container d-flex justify-content-center mt-3">
        <div class="alert alert-success alert-dismissible fade show w-100" style="max-width: 600px;" role="alert">
            <%= success %>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    </div>
<% } %>

<% if (error && error.length) { %>
    <div class="container d-flex justify-content-center mt-3">
        <div class="alert alert-danger alert-dismissible fade show w-100" style="max-width: 600px;" role="alert">
            <%= error %>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    </div>
<% } %>
